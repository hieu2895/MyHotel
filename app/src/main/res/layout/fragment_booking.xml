<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_add_hotel"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="16dp"
        android:background="@color/backgroud">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgHotelB"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:src="@drawable/icon_image"/>
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Khách sạn X"
                        android:id="@+id/tvNameB"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Cost"
                        android:id="@+id/tvCostB"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Địa chỉ X"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/tvAddressB"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btnGoogleMap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Xem trên bản đồ"
                        android:background="@drawable/background"

                        android:textColor="#ffff"
                        android:textSize="10dp"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/backgroud"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="GIỚI THIỆU:"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tvdetailB"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_height="wrap_content"
                    android:text="Khách sạn là khu nghỉ dưỡng tuyệt vời với nội thất tiện nghi, đầy đủ phục vụ cho sinh hoạt của bạn. Ngoài ra, "
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hân hạnh được phục vụ quý khách !"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="==========********=========="
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:text="ĐẶT PHÒNG:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btnDateInBooking"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:text="Date in"
                        android:background="@drawable/background"
                        android:textColor="#ffff"/>

                    <Button
                        android:id="@+id/btnDateOutBooking"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="30dp"
                        android:text="Date out"
                        android:background="@drawable/background"
                        android:textColor="#ffff"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Số phòng:"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:textColor="@color/colorPrimaryDark"/>
                    <EditText
                        android:id="@+id/edtQuantity"
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_et_search"/>
                </LinearLayout>

                <Button
                    android:id="@+id/book"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="XÁC NHẬN ĐĂT PHÒNG"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background"
                    android:textColor="#ffff"/>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>

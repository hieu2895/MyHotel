<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgHotelItem"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/ksluxtery"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNameItem"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Luxery"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/tvAddressItem"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/colorNormal"
            android:text="Số 9 Phạm Văn Đồng"/>
        <TextView
            android:id="@+id/tvCostItem"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/colorAccent"
            android:text="1.500.000"/>


    </LinearLayout>


</LinearLayout>